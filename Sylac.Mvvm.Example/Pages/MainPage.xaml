<?xml version="1.0" encoding="utf-8" ?>
<sylac:NavigablePage
    x:Class="Sylac.Mvvm.Example.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sylac="clr-namespace:Sylac.Mvvm.Maui.Controls;assembly=Sylac.Mvvm.Maui"
    xmlns:viewModels="clr-namespace:Sylac.Mvvm.Example.ViewModels;assembly=Sylac.Mvvm.Example"
    x:DataType="viewModels:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello!" />
            <Label
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Enter text to display on example page" />

            <Entry
                x:Name="EnteredText"
                HorizontalOptions="Fill"
                Placeholder="Enter text"
                Text="{Binding EnteredText, Mode=TwoWay}" />

            <Button
                x:Name="CounterBtn"
                Command="{Binding ButtonCommand}"
                HorizontalOptions="Fill"
                Text="Navigate to Example Page" />
        </VerticalStackLayout>
    </ScrollView>

</sylac:NavigablePage>
